<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.riddick.sudoku.Gameboard"
    android:background="@drawable/bg_2_1">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:numColumns="9"
        android:background="#000000"
        android:verticalSpacing="2sp"
        android:horizontalSpacing="2sp"
        android:stretchMode="columnWidth"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_below="@+id/gridView">
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/submit"
        android:background="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:shadowColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="9"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="1"
                android:id="@+id/numPick1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/numPick2"
                android:text="2"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_weight="1"
                android:id="@+id/numPick3"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="3"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/numPick4"
                android:textSize="25dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="4"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/numPick5"
                android:textSize="25dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="5"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/numPick6"
                android:textSize="25dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="6"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/numPick7"
                android:textSize="25dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="7"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:id="@+id/numPick8"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_weight="1"
                android:text="8"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:id="@+id/numPick9"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="9"/>
        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/difficulty"
        android:text="HARD"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#00000000"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:padding="2dp"
        />
    </LinearLayout>
</RelativeLayout>
