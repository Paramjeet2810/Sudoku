<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riddick.sudoku.MainActivity"
    android:background="@drawable/bg_2_1">

<Button
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="NEW GAME"
    android:textColor="#000000"
    android:textStyle="bold"
    android:textColorHighlight="#ff0000"
    android:background="#da2f2f"
    android:layout_marginBottom="144dp"
    android:id="@+id/newGame"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:textSize="25dp"
    android:shadowColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textStyle="bold"
        android:id="@+id/instructions"
        android:background="#da2a2a"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/newGame"
        android:layout_alignLeft="@+id/newGame"
        android:layout_alignStart="@+id/newGame"
        android:layout_alignRight="@+id/newGame"
        android:layout_alignEnd="@+id/newGame"
        android:textSize="25dp"
        android:shadowColor="#000000"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textStyle="bold"
        android:background="#da2f2f"
        android:id="@+id/about"
        android:layout_below="@+id/instructions"
        android:layout_alignLeft="@+id/instructions"
        android:layout_alignStart="@+id/instructions"
        android:layout_alignRight="@+id/instructions"
        android:layout_alignEnd="@+id/instructions"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:shadowColor="#000000" />
</RelativeLayout>
