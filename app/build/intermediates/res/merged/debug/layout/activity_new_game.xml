<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riddick.sudoku.NewGame"
    android:background="@drawable/bg_2_1">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textColorHighlight="#ff0000"
        android:background="#da2f2f"
        android:layout_marginBottom="144dp"
        android:id="@+id/easy"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:shadowColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:textStyle="bold"
        android:id="@+id/medium"
        android:background="#da2f2f"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/easy"
        android:layout_alignLeft="@+id/easy"
        android:layout_alignStart="@+id/easy"
        android:layout_alignRight="@+id/easy"
        android:layout_alignEnd="@+id/easy"
        android:textSize="25dp"
        android:shadowColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:textStyle="bold"
        android:background="#da2f2f"
        android:id="@+id/hard"
        android:layout_below="@+id/medium"
        android:layout_alignLeft="@+id/easy"
        android:layout_alignStart="@+id/easy"
        android:layout_alignRight="@+id/easy"
        android:layout_alignEnd="@+id/easy"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:shadowColor="#000000" />
</RelativeLayout>
