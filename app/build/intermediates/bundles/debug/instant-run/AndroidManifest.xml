<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.riddick.sudoku"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.riddick.sudoku.MainActivity"
            android:label="Sudoku"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.riddick.sudoku.NewGame"
            android:parentActivityName="com.example.riddick.sudoku.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.riddick.sudoku.Gameboard"
            android:parentActivityName="com.example.riddick.sudoku.NewGame"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.riddick.sudoku.Instructions"
            android:parentActivityName="com.example.riddick.sudoku.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.riddick.sudoku.About"
            android:parentActivityName="com.example.riddick.sudoku.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>